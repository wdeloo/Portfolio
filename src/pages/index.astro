---
import About from '../components/about/About.astro';
import Contact from '../components/contact/Contact.astro';
import Education from '../components/education/Education.astro';
import Experience from '../components/experience/Experience.astro';
import Languages from '../components/languages/Languages.astro';
import Presentation from '../components/presentation/Presentation.astro';
import Projects from '../components/projects/Projects.astro';
import Skills from '../components/skills/Skills.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Delo">
	<header></header>

	<main class="flex flex-col gap-10">
		<Presentation />
		<hr />
		<About />
		<Experience />
		<Projects />
		<Skills />
		<div style="grid-template-columns: 60% 40%;" class="grid max-[815px]:flex max-[815px]:flex-col max-[815px]:gap-10">
			<Education />
			<Languages />
		</div>
		<hr />
		<Contact />
	</main>

	<footer></footer>
</Layout>