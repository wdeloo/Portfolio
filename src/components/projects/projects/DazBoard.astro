---
import Tags from "../../tags/Tags.astro";
import Sticked from "../Sticked.astro";
import React from "../../tags/tags/React.astro";
import Tailwind from "../../tags/tags/Tailwind.astro";
import TextContainer from "../TextContainer.astro";
import TypeScript from "../../tags/tags/TypeScript.astro";
import Title from "../Title.astro";
import dazBoard from "../../../images/projects/dazboard.png"
import { Image } from "astro:assets";
---

<article class="flex flex-col gap-4">
    <div>
        <Sticked className="w-full max-[815px]:w-1/2 max-[550px]:w-full max-[550px]:ml-0 max-[815px]:ml-3 h-fit float-right mb-3">
            <Image class="shadow-sm w-full" src={dazBoard} width={500} alt="dazboard" />
        </Sticked>
        <div>
            <Title>
                DazBoard
            </Title>
            <TextContainer>
                <p>
                    A bento style <b>home page</b> for any web browser.
                </p>
                <p>
                    It includes multiple api calls to get IP based <b>location</b>, <b>weather</b> and <b>connection speed</b>.
                </p>
                <p>
                    It includes a OSX style <b>taskbar</b> with <b>drag and drop</b> made <b>from scratch</b>.
                </p>
            </TextContainer>
        </div>
    </div>
    <Tags>
        <React />
        <Tailwind />
        <TypeScript />
    </Tags>
</article>
