---
import type { AstroComponentFactory } from "astro/runtime/server/index.js";
import SectionTitle from "../SectionTitle.astro";
import Container from "./Container.astro";
import BrilliantChess from "./projects/BrilliantChess.astro";
import DazBoard from "./projects/DazBoard.astro";
import EscapeAI from "./projects/EscapeAI.astro";
import HTBMadeEZ from "./projects/HTBMadeEZ.astro";
import Inflatio from "./projects/Inflatio.astro";

interface Project {
    Component: AstroComponentFactory
    cols?: number
    rows?: number
    rotate?: number
    color: string
    url?: string
    development?: {
        is: boolean
        position?: "left" | "right"
    }
}

const projects: Project[] = [
    {
        Component: BrilliantChess,
        cols: 5,
        rotate: 1,
        color: "var(--color-yellow-100)",
        url: "https://wdeloo.github.io/Brilliant-Chess"
    },
    {
        Component: DazBoard,
        cols: 2,
        rows: 2,
        rotate: -1,
        color: "var(--color-blue-100)",
        url: "https://wdeloo.github.io/DazBoard",
    },
    {
        Component: HTBMadeEZ,
        cols: 3,
        rotate: 1,
        color: "var(--color-green-100)",
        url: "https://wdeloo.github.io/HTB-Made-EZ"
    },
    {
        Component: Inflatio,
        cols: 3,
        rows: 2,
        rotate: 0.5,
        color: "var(--color-red-100)",
        url: "https://wdeloo.github.io/Inflatio"
    },
    {
        Component: EscapeAI,
        cols: 2,
        rows: 2,
        rotate: 1,
        color: "var(--color-sky-100)",
        development: {
            is: true,
            position: "right",
        },
    },
]
---

<section>
    <header>
        <SectionTitle>Some of my Projects</SectionTitle>
    </header>

    <ul class="grid grid-cols-5 gap-5 max-[815px]:grid-cols-1">
        {projects.map(project => 
            <Container development={project.development} href={project.url} cols={project.cols} rows={project.rows} rotate={project.rotate} color={project.color}>
                <project.Component />
            </Container>
        )}
    </ul>
</section>