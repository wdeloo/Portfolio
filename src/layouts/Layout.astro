---
import "../styles/fonts.css"

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={import.meta.env.BASE_URL + "/favicon.svg"} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div>
			<slot />
		</div>
	</body>
</html>

<style is:global>
	:root {
		--text: #262626;
	}

	html,
	body {
		width: 100%;
		height: 100%;

		display: flex;
		flex-direction: column;
		align-items: center;

		color: var(--text);

		font-family: "Nunito", sans-serif;
		font-optical-sizing: auto;
		font-weight: normal;
		font-style: normal;
	}

	body > div {
		width: 100%;
		max-width: 800px;
		padding: 30px;
	}

    .socialNetworkAnchor div, .socialNetworkAnchor svg {
        transition: 150ms;
    }

    .socialNetworkAnchor:hover > div {
        background-color: var(--text);
    }

    .socialNetworkAnchor:hover svg {
        fill: white !important;
    }
</style>
