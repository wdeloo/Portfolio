---
import "../styles/global.css"

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div>
			<slot />
		</div>
	</body>
</html>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	:root {
		--text: #262626;
		--lighter: #414141;

		--lighter-purple: #dab2ff;
		--lighter-pink: #fda5d5;
	}

	html,
	body {
		width: 100%;
		height: 100%;

		display: flex;
		flex-direction: column;
		align-items: center;

		color: var(--text);

		font-family: "Nunito", sans-serif;
		font-optical-sizing: auto;
		font-weight: normal;
		font-style: normal;
	}

	body > div {
		width: 100%;
		max-width: 800px;
		padding: 30px;
	}
</style>
